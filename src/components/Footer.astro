---
import { Icon } from 'astro-icon/components';
import config from '../config.json';
import FooterNav from './FooterNav.astro';
---

<footer class="mt-12 border-t border-gray-200 py-8 dark:border-neutral-800">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <div class="flex flex-col items-center gap-4 md:items-start">
        <a href="/" class="text-xl font-semibold dark:text-white">
          {config.siteName}
        </a>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Â© {new Date().getFullYear()} {config.siteName}. All rights reserved.
        </p>
      </div>
      
      <FooterNav class="flex flex-wrap justify-center gap-6 text-sm md:justify-end" />
      
      <div class="flex items-center gap-4 text-lg">
        <a
          href="https://twitter.com/thisissuree"
          aria-label="Twitter profile page (@thisissuree)"
          target="_blank"
          class="text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
        >
          <Icon name="fa6-brands:x-twitter" />
        </a>
        <a
          href="https://github.com/Suree33"
          aria-label="GitHub profile page (@Suree33)"
          target="_blank"
          class="text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
        >
          <Icon name="fa6-brands:github" />
        </a>
        <a 
          href="/rss.xml" 
          aria-label="RSS feed"
          class="text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
        >
          <Icon name="fa6-solid:rss" />
        </a>
      </div>
    </div>
  </div>
</footer>