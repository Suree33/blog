---
import { Image } from 'astro:assets';
import Hamburger from './Hamburger.astro';
import SocialIcons from './SocialIcons.astro';
import HeaderNav from './HeaderNav.astro';
import headerIcon from '../assets/images/profile-icon.jpg';
import { cn } from '../lib/utils';
---

<header
  class={cn(
    'hamburger-toggle sticky top-0 z-50 flex justify-center',
    'px-0 py-0 sm:px-4 sm:py-4',
    'bg-white/80 dark:bg-neutral-950/80',
    'data-active:bg-white dark:data-active:bg-neutral-950',
    'backdrop-brightness-sm backdrop-blur-[20px] backdrop-saturate-150',
    'transition-all duration-500',
    'dark:text-white',
  )}
>
  <div class="container flex items-center justify-between">
    <div class="flex items-center justify-between gap-8">
      <h1 class="hamburger-toggle transition data-active:opacity-0">
        <a class="block px-4 py-3 sm:p-0" href="/">
          <Image
            class="aspect-square w-8 rounded-full border sm:w-10"
            src={headerIcon}
            alt="サイトのロゴ画像（アイコン画像）"
            width="256"
            height="256"
          />
        </a>
      </h1>
      <HeaderNav class="hidden gap-6 text-base sm:flex" />
    </div>
    <SocialIcons class="hidden items-center gap-x-6 text-xl sm:flex" />
    <div class="flex h-full items-center sm:hidden">
      <Hamburger
        width="1.7rem"
        classList="px-4 py-4"
        textColor="text-black dark:text-white"
      />
    </div>
    <style>
      .sm-menu {
        height: 0;
        padding: 2.5rem;
        opacity: 0;
        visibility: hidden;
        z-index: -1;
        &[data-active] {
          height: calc(100dvh - (14 * 0.25rem));
          visibility: visible;
          opacity: 1;
          z-index: 40;
        }
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
    </style>
    <div
      class="hamburger-toggle sm-menu fixed top-14 z-40 flex w-full flex-col justify-between gap-y-6 bg-white transition-all duration-500 sm:hidden dark:bg-neutral-950"
    >
      <HeaderNav
        class="flex w-full basis-full flex-col items-center justify-center gap-y-8 text-2xl sm:flex sm:gap-x-6"
      />
      <SocialIcons
        class="flex flex-wrap items-center justify-center gap-x-8 gap-y-6 text-xl"
      />
    </div>
  </div>
</header>
<script>
  import { toggleHamburgerMenu, toggleHeaderOnScroll } from '../scripts/menu';
  document.addEventListener('DOMContentLoaded', () => {
    toggleHamburgerMenu('.hamburger', '.hamburger-toggle');
    toggleHeaderOnScroll('header', '.hamburger', {
      upThreshold: 1500,
      downThreshold: 1000,
    });
  });
</script>
